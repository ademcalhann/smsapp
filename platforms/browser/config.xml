<?xml version='1.0' encoding='utf-8'?>
<widget id="com.mesajplus.system" version="2.0.4" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Mesaj Plus</name>
    <description>
     Yoklama Terminali Entegreli Ücretsiz Sms ve Kurumsal Mesajlaşma Programı...
    </description>
    <author email="ademcalhan@yandex.com" href="https://mesajplus.com">
      Adem Çalhan
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="Fullscreen" value="false" />
    <preference name="AndroidPersistentFileLocation" value="Compatibility" />
    <preference name="android-minSdkVersion" value="24" />
    <preference name="android-targetSdkVersion" value="28" />
</widget>
